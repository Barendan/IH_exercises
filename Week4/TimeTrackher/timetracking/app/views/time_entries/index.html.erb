<h1> <%= @my_project.name %> </h1>

<ul>
	<% @my_entries.each do |entry| %>

	<li>
		<%= entry.hours %> h
		<%= entry.minutes %> m - 
		<%= entry.date %> 
	<p>	<%= entry.comments %> </p>
		<a href="/projects/<%= @my_project.id %>/time_entries/<%= entry.id %>/edit">Edit </a>
&nbsp;
		<%= link_to('delete', project_time_entry_path(@my_project, entry), method: :delete, data: {confirm: 'Are you sure?'}) %>
	</li>

	<% end %>
</ul>

<a href="/projects/<%= @my_project.id %>/time_entries/new">
	Add a time entry to <%= @my_project.name %>
</a><br>
<a href="/projects">
	Return to Projects list
</a>



