<h1>Pok√©dex</h1>

<!-- List of pokemon -->
<ul class="pokedex-list">
  <% @pokemon.each do |pkmn| %>
    <li>
      <button class="js-show-pokemon btn btn-link"
          data-pokemon-uri="<%= pkmn["resource_uri"] %>">
        <%= pkmn["name"] %>
      </button>
    </li>
  <% end %>
</ul>


<!-- Pokemon modal view (hidden at first) -->
<div class="modal fade js-pokemon-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>

        <h3 class="modal-title">
          <span class="js-pkmn-name">Feraligtr</span>
          <small class="js-pkmn-number">#160</small>
        </h3>
      </div><!-- .modal-header -->

      <div class="modal-body">

        <div class="js-pkmn-pic"></div>
        <p class="js-description-tag"></p>

        <dl class="dl-horizontal">
          <dt>Height:</dt>
          <dd class="js-pkmn-height">23</dd>

          <dt>Weight:</dt>
          <dd class="js-pkmn-weight">888</dd>

          <dt>Hitpoints:</dt>
          <dd class="js-pkmn-hitpoints">888</dd>

          <dt>Attack:</dt>
          <dd class="js-pkmn-atk">888</dd>

          <dt>Defense:</dt>
          <dd class="js-pkmn-def">888</dd>

          <dt>Special Attack:</dt>
          <dd class="js-pkmn-sp-atk">888</dd>  

          <dt>Special Defense:</dt>
          <dd class="js-pkmn-sp-def">888</dd>

          <dt>Speed:</dt>
          <dd class="js-pkmn-speed">888</dd>

          <dt>Type:</dt>
          <dd class="js-pkmn-type">888</dd>

        </dl>
      </div><!-- .modal-body -->

      <div class="modal-footer">
        <center><button class="js-evolutions btn btn-primary">See Evolutions
        </button></center>
      </div><!-- .modal-footer -->

    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div><!-- .modal -->


<!-- Pokemon modal view2 (hidden at first) -->
<div class="modal fade js-evolutions-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>

        <h3 class="modal-title js-ev-title">Evolutions</h3>
      </div><!-- .modal-header -->

      <div class="modal-body">
        <ul class="js-evolutions-list">Loading...</ul>
      </div><!-- .modal-body -->

    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div><!-- .modal -->